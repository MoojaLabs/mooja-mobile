<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow HTTP traffic to Railway and other deployment platforms -->
        <domain includeSubdomains="true">up.railway.app</domain>
        <domain includeSubdomains="true">onrender.com</domain>
        <domain includeSubdomains="true">fly.dev</domain>
        <domain includeSubdomains="true">herokuapp.com</domain>
        <domain includeSubdomains="true">vercel.app</domain>
        <domain includeSubdomains="true">netlify.app</domain>
        <!-- Local development -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
    
    <!-- For HTTPS domains, use default secure behavior -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
